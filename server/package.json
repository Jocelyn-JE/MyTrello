{
    "name": "mytrello-server",
    "version": "1.0.0",
    "description": "This is the backend server providing an API for the clients as well as connecting to a PostgreSQL database for document storage",
    "main": "./src/app.ts",
    "overrides": {
        "inflight": "npm:@isaacs/inflight@^1.0.6",
        "rimraf": "^5.0.10",
        "glob": "^11.0.0",
        "@humanwhocodes/config-array": "npm:@eslint/config-array@^0.21.0",
        "@humanwhocodes/object-schema": "npm:@eslint/object-schema@^2.1.6",
        "eslint": "^9.36.0"
    },
    "scripts": {
        "start-with-migrate": "prisma migrate reset --force && prisma migrate dev --name init --skip-generate && ts-node ./src/app.ts",
        "start": "ts-node ./src/app.ts",
        "test": "node --no-warnings ./node_modules/jest/bin/jest.js",
        "lint": "eslint . --ext .ts",
        "format": "prettier --write \"src/**/*.{ts,js,json}\"",
        "format:check": "prettier --check \"src/**/*.{ts,js,json}\""
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Jocelyn-JE/MyTrello.git"
    },
    "keywords": [
        "epitech"
    ],
    "author": "Jocelyn JEAN-ELIE",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/Jocelyn-JE/MyTrello/issues"
    },
    "homepage": "https://github.com/Jocelyn-JE/MyTrello#readme",
    "dependencies": {
        "@prisma/client": "^6.16.2",
        "bcryptjs": "^3.0.2",
        "cors": "^2.8.5",
        "express": "^5.1.0",
        "jsonwebtoken": "^9.0.2",
        "swagger-ui-express": "^5.0.1",
        "websocket-express": "^4.0.1",
        "ws": "^8.18.3",
        "yaml": "^2.8.1"
    },
    "devDependencies": {
        "@eslint/config-array": "^0.21.0",
        "@eslint/object-schema": "^2.1.6",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "@types/jest": "^30.0.0",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^24.5.0",
        "@types/supertest": "^6.0.3",
        "@types/swagger-ui-express": "^4.1.8",
        "@types/ws": "^8.18.1",
        "@typescript-eslint/eslint-plugin": "^8.45.0",
        "@typescript-eslint/parser": "^8.45.0",
        "eslint": "^9.36.0",
        "eslint-config-prettier": "^9.1.2",
        "eslint-plugin-prettier": "^5.2.1",
        "globals": "^16.4.0",
        "jest": "^30.1.3",
        "prettier": "^3.6.2",
        "prisma": "^6.16.2",
        "supertest": "^7.1.4",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.2"
    }
}